<!DOCTYPE html>
<html>
<head>
  <title>IronLibrary</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page-header">
    <%= link_to root_path, class: "title_text" do%>
    <h1>The Iron Library</h1>
  <%end %>
  </div>

  <% if @current_user %>
  <div class="logging">
    <%= link_to 'Sign Out', sign_in_path, method: :delete %>

    Hi <%= @current_user.username %>.
  <% else %>
    <%= link_to 'Sign In', sign_in_path %>

  <% end %>


  </div>

   <% if notice %>
     <p>
       <%= notice %>
     </p>
   <% end %>

 <%= yield %>

 </body>
 </html>
